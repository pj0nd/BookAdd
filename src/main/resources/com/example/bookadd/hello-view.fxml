<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bookadd.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="Author" prefHeight="25.0" prefWidth="100.0" promptText="Author" />

    <TextField fx:id="Title" prefHeight="25.0" prefWidth="100.0" promptText="Title" />

    <TextField fx:id="Series" prefHeight="25.0" prefWidth="100.0" promptText="Series" />

    <TextField fx:id="Comments" prefHeight="25.0" prefWidth="100.0" promptText="Comments" />



    <Label fx:id="welcomeText"/>
    <Button text="Add book!" onAction="#onHelloButtonClick"/>
</VBox>
